@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Index";
}

@addTagHelper *,Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<User>


<h1>Salary List</h1>

<div>
    <a asp-action="Add" class="btn btn-primary">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Password</td>

                        <td>
                            <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            @if (item.IsAdmin == false)
                            {
                                <a style="color:white" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            }
                        </td>
                    </tr>
            }
        </tbody>
    </table>

    <a style="color:white" asp-controller="Home" asp-action="Back" class="btn btn-primary">Back</a>
</div>


