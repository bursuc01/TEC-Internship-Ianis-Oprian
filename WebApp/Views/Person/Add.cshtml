@{
    ViewData["Title"] = "Add";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers

@model Person

<form method="post" asp-action="Add">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label> Person Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div> 
        <div class="col-md-4 mb-3">
            <label> Person Surname</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label> Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label> Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>  
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label> Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>  
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label> Position Id</label>
            <input asp-for="PositionId" class="form-control" />
            <span asp-validation-for="PositionId" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label> Salary Id</label>
            <input asp-for="SalaryId" class="form-control" />
            <span asp-validation-for="SalaryId" class="text-danger"></span>
        </div>
    </div>     
    <button type="submit" class="btn btn-primary">Save</button>
    <a style="color:white" asp-controller="Person" asp-action="Back" class="btn btn-primary">Back</a>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
