
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<PersonInformation>
<h1>Person List</h1>
<div>
    <a asp-action="Add" class="btn btn-primary">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position Name</th>
                <th>Department Name</th>
                <th>Salary</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Id</td>
                   <td>@item.Name</td>
                   <td>@item.PositionName</td>
                   <td>@item.DepartmentName</td>
                   <td>@item.Salary</td>
                   
                   <td>
                       <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                       <a style="color:white" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                       <a style="color:white" asp-controller="Details" asp-action="Index" class="btn btn-primary" asp-route-id="@item.Id">Details</a>
                   </td>
               </tr>
           }
        </tbody>
    </table>

    <a style="color:white" asp-controller="Home" asp-action="Back" class="btn btn-primary">Back</a>

</div>

